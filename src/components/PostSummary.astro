---
import PostDetails from "@/components/PostDetails.astro";
import PostTags from "@/components/PostTags.astro";

interface Props {
  href: string;
  title: string;
  preview: string;
  timestamp: number;
  tags: string[];
  timeToReadMins: number;
}

const props = Astro.props;
---

<article class="py-8">
  <header class="mb-2 flex flex-col">
    <h2 class="text-lg focus:underline hover:underline mb-2">
      <a href={props.href}>{props.title}</a>
    </h2>

    <PostDetails timeToReadMins={props.timeToReadMins} timestamp={props.timestamp} />
  </header>

  <p class="mb-2">{props.preview}</p>

  <PostTags tags={props.tags} />
</article>
